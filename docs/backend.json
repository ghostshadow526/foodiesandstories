
{
  "entities": {
    "product": {
      "title": "Product",
      "description": "A product (book) sold in the store.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "slug": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "price": {
          "type": "number"
        },
        "author": {
          "type": "string"
        },
        "category": {
          "type": "string"
        },
        "imageId": {
          "type": "string"
        },
        "isFeatured": {
          "type": "boolean",
          "description": "Whether the product is featured on the homepage."
        }
      },
      "required": [
        "name",
        "slug",
        "price",
        "author"
      ]
    },
    "article": {
      "title": "Article",
      "description": "A blog post or article.",
      "type": "object",
      "properties": {
        "slug": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "excerpt": {
          "type": "string"
        },
        "content": {
          "type": "string"
        },
        "imageUrl": {
          "type": "string"
        },
        "imageHint": {
          "type": "string"
        },
        "author": {
          "type": "string"
        },
        "publishedAt": {
          "type": "string",
          "format": "date"
        },
        "likes": {
          "type": "number",
          "description": "The number of likes the article has."
        }
      },
      "required": [
        "slug",
        "title",
        "content",
        "author",
        "publishedAt"
      ]
    },
    "order": {
      "title": "Order",
      "description": "A customer order containing shipping details and items purchased.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "address": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "country": {
          "type": "string"
        },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "price": {
                "type": "number"
              },
              "quantity": {
                "type": "number"
              }
            }
          }
        },
        "total": {
          "type": "number"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "enum": [
            "Pending",
            "Paid",
            "Shipped",
            "Delivered",
            "Cancelled"
          ]
        },
        "receiptImageUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL of the uploaded payment receipt image."
        }
      },
      "required": [
        "name",
        "email",
        "address",
        "items",
        "total",
        "createdAt",
        "status",
        "receiptImageUrl"
      ]
    }
  },
  "auth": {
    "providers": [
      "email"
    ]
  },
  "firestore": {
    "/products/{productId}": {
      "schema": {
        "$ref": "#/backend/entities/product"
      },
      "description": "Stores all the books available in the store."
    },
    "/articles/{articleId}": {
      "schema": {
        "$ref": "#/backend/entities/article"
      },
      "description": "Stores all the articles for the blog."
    },
    "/orders/{orderId}": {
      "schema": {
        "$ref": "#/backend/entities/order"
      },
      "description": "Stores customer orders."
    }
  }
}
